<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".Upload_article"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

    <EditText
        android:id="@+id/et_article_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_black"
        android:padding="15dp"
        android:hint="Pictures title"
        android:layout_marginTop="15dp"
        />

    <EditText
        android:id="@+id/et_article_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_black"
        android:padding="15dp"
        android:hint="Pictures desc"
        android:layout_marginTop="20dp"
        android:inputType="textMultiLine"
        />

    <EditText
        android:id="@+id/et_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_black"
        android:padding="15dp"
        android:hint="Category"
        android:layout_marginTop="20dp"
        android:inputType="textMultiLine"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/tv_category"
        android:background="@drawable/border_black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="15dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Category"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:textColor="@color/Black"

        />

    <com.toptoche.searchablespinnerlibrary.SearchableSpinner
        android:id="@+id/sspCategory"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="20dp"
        app:hintText="Change Category"
        android:background="@drawable/border_black"
        style="@style/SpinnerTheme"
        />

    <TextView
        android:id="@+id/tv_change_promote_category"
        android:background="@drawable/border_black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="15dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Promote Package"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:textColor="@color/Black"
        />

    <com.toptoche.searchablespinnerlibrary.SearchableSpinner
        android:id="@+id/sspPromotearticle"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="20dp"
        app:hintText="Change Promote Package"
        android:background="@drawable/border_black"
        style="@style/SpinnerTheme"
        />

    <Button
        android:id="@+id/btn_add_thumbnail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_black"
        android:layout_marginTop="20dp"
        android:text="+ Add Thumbnail File\nNo File Selected"
        android:textAllCaps="false"
        android:visibility="gone"
        />

    <Button
        android:id="@+id/btn_add_articlefile"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/border_black"
        android:layout_marginTop="20dp"
        android:text="+ Change Image file\nNo File Selected"
        android:textAllCaps="false"
        />


    <LinearLayout
        android:id="@+id/ll_upload"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/border1"
        android:orientation="vertical"
        >

        <Button
            android:id="@+id/btn_upload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update"
            android:textAllCaps="false"
            android:textColor="@color/text_color1"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_gravity="center_horizontal"
            android:background="@color/transparent"
            android:drawableLeft="@drawable/ic_upload_videos"
            />

    </LinearLayout>


</LinearLayout>
    </ScrollView>
</LinearLayout>
